# Production Environment Variables for Coolify
# Copy these to your Coolify environment variables

# FastAPI Configuration
DEBUG=false
HOST=0.0.0.0
PORT=8000

# JWT Configuration - CHANGE THIS IN PRODUCTION!
SECRET_KEY=your-super-secret-jwt-key-change-this-in-production-please
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# Authentication User - CHANGE THESE IN PRODUCTION!
AUTH_USERNAME=admin
AUTH_PASSWORD=secure_password_123

# QR Code API Configuration
MAX_DATA_LENGTH=2000
DEFAULT_SIZE=medium
DEFAULT_FORMAT=png
DEFAULT_ERROR_CORRECTION=M

# Performance Configuration
MAX_CONCURRENT_REQUESTS=100
GENERATION_TIMEOUT_MS=500

# Logging Configuration
LOG_LEVEL=INFO
